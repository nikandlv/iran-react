div.zone
    .view-1,.view-2
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background green no-repeat center center fixed
        -webkit-background-size cover
        -moz-background-size cover
        -o-background-size cover
        background-size cover
        &.active
            z-index: 10
    .overlay
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background rgba(0,0,0,0.1)
        z-index 11