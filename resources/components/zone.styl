div.zone
    .view
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background green no-repeat center center fixed
        -webkit-background-size cover
        -moz-background-size cover
        -o-background-size cover
        background-size cover
        &.active
            z-index: 10
    .overlay
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background rgba(0,0,0,0.1)
        z-index 11
    transition opacity 250ms
    .loading
        animation loading 370ms forwards 
    .loaded
        animation loaded 370ms forwards
@keyframes loaded
    0%
        opacity 0
        transform scale(1.2)
    100%
        opacity 1
        transform scale(1)
@keyframes loading
    0%
        opacity 1
        transform scale(1)
    100%
        opacity 0
        transform scale(1.2)