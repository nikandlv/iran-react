.bottom-sheet
    position absolute
    bottom 0
    width 100%
    display flex
    overflow auto
    align-items: center
    max-width: 100vw
    box-sizing border-box
    padding 0.7rem 
    background white
    border-top 0.5px solid rgba(255,255,255,0.2)
    z-index 12
    transform translateY(100%)
    &.open
        transform translateY(0)