.bottom-bar
    position absolute
    bottom 0
    width 100%
    display flex
    overflow auto
    max-width: 100vw
    box-sizing border-box
    padding 1.3rem
    border-top 0.5px solid rgba(255,255,255,0.2)
    z-index 12
    & .expand-icon-wrapper
        flex-grow 1
        justify-content: flex-end
        display flex
        svg 
            width 48px
            height auto
            cursor pointer
        svg .icon
            fill white